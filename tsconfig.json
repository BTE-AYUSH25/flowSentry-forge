{
  "compilerOptions": {
    /* Language and runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    
    /* Module system */
    "module": "ESNext",
    "moduleResolution": "Node",
    
    /* Paths */
    "rootDir": ".",
    "outDir": "dist",

    /* Type safety */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Build behavior */
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Node compatibility */
    "types": ["node"]
  },
  "include": [
    "src",
    "scripts",
    "forge"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
