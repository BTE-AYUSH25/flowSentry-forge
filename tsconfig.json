{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": false,
    "skipLibCheck": true,

    "types": [],
    "typeRoots": ["./node_modules/@types"],

    "noEmit": false
    // ❌ mistake before: TS scanned implicit libraries
    // ❌ mistake before: TS expected prop-types / yargs types
    // ✅ fix: restrict type resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
